switch (choice) {
            case 1:
                addStudent();
                break;
            case 2:
                viewStudents();
                break;
            case 3:
                viewActivities(clubs);
                break;
            case 4:
                viewActivities(sports);
                break;
            case 5:
                viewStudentsByGroup();
                break;
            case 6:
                saveToFile();
                break;
            case 7:
                std::cout << "Exiting...\n";
                break;
            default:
                std::cout << "Invalid choice. Try again.\n";
        }
    } while (choice != 7);

    return 0;
}
